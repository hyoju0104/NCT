<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lec.spring.repository.BrandRepository">

    <sql id="SELECT_BASE">
        SELECT
            b.id "b_id",
            b.auth_id "b_auth_id",
            b.name "b_name",
            b.username "b_username",
            b.password "b_password",
            b.phone_num "b_phone_num",
            b.logo_sourcename "b_logo_sourcename",
            b.logo_filename "b_logo_filename",
            b.description "b_description",
            b.is_actived "b_is_actived"
        FROM
            Brand b
    </sql>

    <resultMap id="mapBrand" type="com.lec.spring.domain.Brand">
        <result column="b_id" property="id"/>
        <result column="b_auth_id" property="authId"/>
        <result column="b_name" property="name"/>
        <result column="b_username" property="username"/>
        <result column="b_password" property="password"/>
        <result column="b_phone_num" property="phoneNum"/>
        <result column="b_logo_sourcename" property="logoSourcename"/>
        <result column="b_logo_filename" property="logoFilename"/>
        <result column="b_description" property="description"/>
        <result column="b_is_actived" property="isActived"/>
    </resultMap>

    <select id="findByUsername" resultMap="mapBrand">
        <include refid="SELECT_BASE"/>
        <where>
            username = #{username}
        </where>
    </select>


    <insert id="save" flushCache="true" parameterType="com.lec.spring.domain.Brand" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO Brand(auth_id, name, username, password, phone_num, logo_sourcename, logo_filename, description)
        VALUES (2, #{name}, #{username}, #{password}, #{phoneNum}, #{logoSourcename}, #{logoFilename}, #{description})
    </insert>

    <update id="update" flushCache="true" parameterType="com.lec.spring.domain.Brand">
        UPDATE Brand
        SET password = #{password}, phone_num = #{phone_num}, description = #{description}
        WHERE id = #{id}
    </update>

    <select id="findById" resultMap="mapBrand">
        <include refid="SELECT_BASE"/>
        WHERE id = #{id}
    </select>

    <select id="myDetail" resultMap="mapBrand">
        <include refid="SELECT_BASE"/>
            WHERE id = #{id}
    </select>

    <update id="myUpdate" parameterType="com.lec.spring.domain.Brand" flushCache="true">
        UPDATE Brand
        SET phone_num = #{phoneNum}, description = #{description}
        WHERE id = #{id}
    </update>

    <update id="myDelete" flushCache="true" parameterType="com.lec.spring.domain.Brand">
        UPDATE Brand
        SET is_actived = false
        WHERE id = #{id}
    </update>

</mapper>